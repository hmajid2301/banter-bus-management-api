{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run: Fast API",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload"]
    },
    {
      "name": "Tests: All",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-rf"],
      "justMyCode": true
    },
    {
      "name": "Test: Current File",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-rf", "${file}"],
      "justMyCode": true
    }
  ]
}
